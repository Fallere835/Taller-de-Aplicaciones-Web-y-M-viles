<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F3F4F6">

    <TextView
        android:id="@+id/txtTituloDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel MIAUtomotriz"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú de opciones (demo Clase 1)"
        android:textSize="14sp"
        android:textColor="#4B5563"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnMisReparaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Reparaciones"
        android:textAllCaps="false"
        android:padding="12dp"
        android:background="#10B981"
        android:textColor="#FFFFFF" />

    <!-- Más botones a futuro:
         btnMisFacturas, btnMisCotizaciones, etc. -->

</LinearLayout>
